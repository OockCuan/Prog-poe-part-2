@using ProgPOE.Controllers

<div class="container mt-4">
    

    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Claims</h2>
            <a class="btn btn-secondary text-white" asp-controller="Claims" asp-action="Create">New Claim</a>
        </div>

       
        
            
                <thead>
                    <tr>
                        <th>Claim Number</th>
                        <th>Status</th>
                        <th>Documentation</th>
                        <th>Total Overtime (Hours)</th>
                        <th>Lecturer</th>
                        <th>Rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.Status</td>
                            <td>@claim.Documentation</td>
                            <td>@claim.Hours</td>
                            <td>@claim.Lecturer</td>
                            <td>@claim.Rate.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        
    </div>
